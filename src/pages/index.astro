---
// Importação dos componentes necessários
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import designImage from "@images/design-image.avif";
import socialMedia from "@images/social-media-image.avif";
import analytics from "@images/analytics-image.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Descubra a Magia da Enchanté Digital"
    url="https://enchantedigital.com/sobre-nos"
  />

  <HeroSection
    title=`Transforme sua Marca com a <span
        class="text-purple-500 dark:text-purple-400">Enchanté Digital</span>`
    subTitle="Soluções de marketing digital inovadoras para elevar sua presença online e encantar seu público."
    primaryBtn="Comece Sua Jornada"
    primaryBtnURL="/servicos"
    secondaryBtn="Fale com um Especialista"
    secondaryBtnURL="/contato"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`De Mais de <span class="font-bold">500</span> Clientes Satisfeitos`
    src={heroImage}
    alt="Equipe da Enchanté Digital trabalhando em projetos de marketing digital"
  />

  <ClientsSection
    title="Confiada por Líderes do Mercado"
    subTitle="Experimente a excelência escolhida pelas maiores marcas."
  />

  <FeaturesGeneral
    title="Superando Expectativas no Marketing Digital"
    subTitle="Na Enchanté Digital, enfrentamos os desafios únicos do mundo digital moderno. Do design gráfico à análise de mídias, estamos comprometidos em ajudar você a superar obstáculos e alcançar resultados extraordinários."
    src={featureImage}
    alt="Serviços da Enchanté Digital em destaque"
    features={features}
  />

  <FeaturesNavs
    title=`Personalize as soluções da <span class="text-purple-500 dark:text-purple-400">Enchanté Digital</span> para atender perfeitamente às necessidades da sua marca.`
    tabs={[
      {
        heading: "Design Gráfico Inovador",
        content:
          "Potencialize sua marca com o design gráfico inovador da Enchanté Digital. Experimente uma comunicação visual impactante que cativa seu público e eleva sua presença no mercado.",
        svg: "palette",
        src: designImage,
        alt: "Designer trabalhando em um projeto gráfico inovador",
        first: true,
      },
      {
        heading: "Gestão de Mídias Sociais",
        content:
          "Navegue com facilidade pelas redes sociais com a gestão estratégica da Enchanté Digital. Aumente seu engajamento e construa uma comunidade leal com conteúdo relevante e campanhas impactantes.",
        svg: "share",
        src: socialMedia,
        alt: "Dashboard de gestão de mídias sociais mostrando métricas de engajamento",
        second: true,
      },
      {
        heading: "Análise de Mídias Avançada",
        content:
          "Maximize seus resultados com nossa análise de mídias avançada. Transforme dados em insights acionáveis para otimizar suas estratégias e alcançar um ROI excepcional.",
        svg: "chart",
        src: analytics,
        alt: "Gráficos e dashboards mostrando análises detalhadas de performance de mídias",
      },
    ]}
  />

  <TestimonialsSection
    title="Acelere o Crescimento da Sua Marca"
    subTitle="Na Enchanté Digital, garantimos um início rápido com estratégias personalizadas. Experimente a velocidade do marketing digital redefinida."
    testimonials={[
      {
        content:
          "A Enchanté Digital revolucionou nossa presença online. A implementação foi rápida, e os resultados são fenomenais. Verdadeiramente um divisor de águas em marketing digital!",
        author: "Mariana Silva",
        role: "Diretora de Marketing | TechInova Ltda.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "500+",
        description:
          "clientes encantados — de startups a grandes corporações",
      },
      {
        count: "150%",
        description:
          "aumento médio no engajamento nas redes sociais",
      },
      {
        count: "30%",
        description:
          "redução nos custos de aquisição de clientes",
      },
      {
        count: "3x",
        description: "mais conversões com nossas estratégias de marketing",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Perguntas<br />frequentes" faqs={faqs} />

  <HeroSectionAlt
    title="Vamos Encantar Juntos"
    subTitle="A Enchanté Digital é sua parceira completa em marketing digital, oferecendo soluções personalizadas para elevar sua marca ao próximo nível."
    url="https://enchantedigital.com/contato"
  />
</MainLayout>
